# ============================================
# URL Monitor - Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control!

# ==================== Django Core ====================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-THIS-TO-A-RANDOM-50-CHARACTER-STRING

# SECURITY WARNING: Set to False in production!
DEBUG=True

# Comma-separated list of allowed hosts
# In production, add your domain: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== Database ====================

# Leave commented for SQLite (development)
# Uncomment and configure for PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/url_monitor

# For Render.com, this is automatically set
# DATABASE_URL=postgres://...

# ==================== Redis & Celery ====================

# Upstash Redis (Recommended for Production)
# HTTP-based Redis for better reliability on serverless platforms
# Sign up at: https://upstash.com
UPSTASH_REDIS_URL=https://your-instance.upstash.io
UPSTASH_REDIS_TOKEN=your-upstash-token-here

# Traditional Redis (Local Development)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# For Render.com with Upstash, set:
# UPSTASH_REDIS_URL=https://central-monkey-22361.upstash.io
# UPSTASH_REDIS_TOKEN=your-actual-token
# CELERY_BROKER_URL=rediss://default:your-password@your-instance.upstash.io:6379

# ==================== Email Notifications ====================

# Email backend configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# For Gmail: Use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# ==================== Telegram Notifications (Optional) ====================

# Create bot via @BotFather on Telegram
# Get your chat ID from @userinfobot
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ==================== Slack Notifications (Optional) ====================

# Create Incoming Webhook in your Slack workspace
# Settings & administration → Manage apps → Incoming Webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXX

# ==================== Production Settings ====================

# For production deployment, also set:
# DEBUG=False
# SECRET_KEY=<your-actual-secret-key>
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# DATABASE_URL=<your-postgres-url>
# REDIS_URL=<your-redis-url>

# ==================== Additional Configuration ====================

# Python version (for deployment platforms)
# PYTHON_VERSION=3.11.0

# Worker configuration
# WEB_CONCURRENCY=3
# GUNICORN_WORKERS=3
